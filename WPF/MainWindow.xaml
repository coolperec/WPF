<Window x:Class="WpfAppLists.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfAppLists"
        Title="Product List" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Текущий пользователь: User" FontSize="20" Margin="10"/>
        <Button Content="Добавить товар" Width="150" Margin="10"/>

        <ListBox x:Name="ProductList" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:ProductView />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>